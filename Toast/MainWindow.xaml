<Window x:Class="Toast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toast"
        mc:Ignorable="d"
        Title="Toast Notification Test" 
        Width="360"
        Height="240">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ToastButton" Content="显示通知" Margin="2" Padding="6,2" Click="ToastButton_Click" />
            <Button x:Name="ClearButton" Content="清除所有" Margin="2" Padding="6,2" Click="ClearButton_Click" />
        </StackPanel>
    </Grid>
</Window>
